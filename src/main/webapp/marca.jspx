<?xml version="1.0" encoding="utf-8" ?>
<ui:composition template="template.xhtml"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:a="http://www.ambientinformatica.com.br/jsf2"
	xmlns:p="http://primefaces.org/ui">
	<ui:define name="corpo">

		<p:panel header="FormulÃ¡rio" id="panel">
			<h:panelGrid columns="2">
				<h:outputText value="Nome"></h:outputText>
				<p:inputText value="#{MarcaControl.marca.descricao }"></p:inputText>
				<p:commandButton actionListener="#{MarcaControl.confirmar }" value="Confirmar" update="marcas, panel"/>
			</h:panelGrid>
		</p:panel>
		
		<p:dataTable id="marcas" value="#{MarcaControl.marcas }" var="m"  width="100%" emptyMessage="Sem registros" >
			<f:facet name="header">
				<h:outputText value="Lista de Marcas"></h:outputText>
			</f:facet>
			<p:column sortBy="#{m.descricao }">
				<f:facet name="header">
					<h:outputText value="Nome"></h:outputText>
				</f:facet>
				<h:outputText value="#{m.nome }"></h:outputText>
			</p:column>	
		</p:dataTable>

	</ui:define>
</ui:composition>